<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.pilotfish.pirahnainsurance.redist.Person" table="POLISEAHOLDERS">
        <id name="id" type="java.lang.Long">
            <column name="ID"/>
            <generator class="native"/>
        </id>
        <property name="firstName" type="string" column="F_NAME" length="50" not-null="true" unique="false"/>
        <property name="middleName" type="string" column="M_NAME" length="50" not-null="true" unique="false"/>
        <property name="lastName" type="string" column="L_NAME" length="50" not-null="true" unique="false"/>
        <property name="sex" type="string" column="CLASSIFICATION" length="50" not-null="true" unique="false"/>
        <property name="dateOfBirth" type="date" column="DATE_OF_BIRTH" length="10" not-null="true" unique="false"/>

        <list name="addresses" cascade="persist">
            <key foreign-key="FK_POLISEAHOLDER_ADDRESS" column="POLISEAHOLDER_ID" not-null="true"/>
            <list-index  column="IDX"/>
            <one-to-many class="com.pilotfish.pirahnainsurance.redist.Address"/>
        </list>
    </class>

    <class name="com.pilotfish.pirahnainsurance.redist.Address" table="ADDRESS">
        <id name="id" type="java.lang.Long">
            <column name="ID"/>
            <generator class="native"/>
        </id>
        <property name="ocean" type="string" column="OCEAN" length="50" not-null="true" unique="false"/>
        <property name="reef" type="string" column="REEF" length="50" not-null="true" unique="false"/>
        <property name="dept" type="integer" column="DEPT" not-null="true" unique="false"/>
        <property name="isHome" type="boolean" column="IS_HOME" not-null="true" unique="false"/>
    </class>
</hibernate-mapping>